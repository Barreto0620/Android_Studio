<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Login" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/primary_orange</item>
        <item name="colorSecondaryVariant">@color/dark_orange</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorError">@color/red_error</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:colorBackground">@color/light_gray</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/subtle_text</item>
    </style>

    <style name="Theme.Login" parent="Base.Theme.Login" />

    <style name="EditTextPadrao" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/subtle_text</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/primary_blue</item> <item name="hintTextColor">@color/subtle_text</item> </style>

    <style name="ButtonAcaoPadrao" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item> </style>

</resources>