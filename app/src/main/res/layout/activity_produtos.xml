<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="top|center_horizontal"> <!-- Centraliza horizontalmente -->

    <!-- TextView para exibir a mensagem de boas-vindas com espaçamento no topo -->
    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-vindo à tela de Produtos!"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp" />

    <!-- Outros conteúdos do layout, como botões, etc. -->

</LinearLayout>
