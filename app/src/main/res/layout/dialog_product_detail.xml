<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_dialog_background"
    android:fitsSystemWindows="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhes do Produto"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/productDetailImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_product" android:contentDescription="Imagem do Produto"
        android:layout_marginBottom="16dp"
        android:background="@drawable/image_rounded_corners"/>

    <TextView
        android:id="@+id/productDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Produto"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/productDetailPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R$ 00,00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_orange"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/productDetailDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição detalhada do produto... lorem ipsum dolor sit amet."
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/contactSellerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar em contato com o vendedor"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingVertical="12dp"
        android:layout_marginBottom="8dp"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_whatsapp"
        app:iconGravity="textStart"
        app:iconTint="@color/white"
        app:iconPadding="10dp"/>

</LinearLayout>